<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.maid.csp.Activity.PlanningEditorActivity">

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pe_datepicker"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:calendarViewShown="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:id="@+id/pe_add"
        android:onClick="addPlanning"
        android:layout_below="@+id/pe_childspinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.maid.csp.UI.SportSpinner"
        android:id="@+id/pe_sportspinner"
        android:layout_below="@+id/pe_datepicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.maid.csp.UI.ChildSpinner"
        android:id="@+id/pe_childspinner"
        android:layout_below="@+id/pe_sportspinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:id="@+id/pe_update"
        android:layout_toEndOf="@+id/pe_add"
        android:onClick="updatePlanning"
        android:layout_below="@+id/pe_childspinner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:id="@+id/pe_delete"
        android:layout_below="@+id/pe_childspinner"
        android:layout_toRightOf="@+id/pe_update"
        android:layout_toEndOf="@+id/pe_update"
        android:onClick="deletePlanning" />

</RelativeLayout>
